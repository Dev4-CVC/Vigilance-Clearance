@model VigilanceClearance.Models.PESB.new_reference_model

@{
    Layout = "~/Views/Shared/_PESBLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />


<div class="d-flex justify-content-end px-4 pt-3">
    <a href="@Url.Action("Officer_Reports", "PESB")" class="btn btn-primary">
        <i class="bi bi-arrow-right-circle"></i> Add Officer Details
    </a>
</div>


<div class="container">
    <h4 class="mb-4 text-white p-3 rounded" style="background: linear-gradient(90deg, #0d6efd, #20c997); border-bottom: 1px solid rgba(255,255,255,0.3);">
        Reference Details
    </h4>

    @if (Model != null)
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>Id:</strong> <span class="text-muted">@Model.id</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>Reference Received For:</strong> <span class="text-muted">@Model.referenceReceivedFor</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>Reference Received From:</strong> <span class="text-muted">@Model.referenceReceivedFrom</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>Post:</strong> <span class="text-muted">@Model.selectionForThePostCategory</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>Sub Post :</strong> <span class="text-muted">@Model.selectionForThePostSubCategory</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>File No:</strong> <span class="text-muted">@Model.referenceNoFileNo</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>CVC Date:</strong> <span class="text-muted">@Model.referenceOrSubmissionToCvcDate</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>CVC Ref ID:</strong> <span class="text-muted">@Model.cvcReferenceIdFileNo</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>Created By:</strong> <span class="text-muted">@Model.createdBy</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>Pending With:</strong> <span class="text-muted">@Model.pendingWith</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>UID:</strong> <span class="text-muted">@Model.uid</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <strong>Reference ID:</strong> <span class="text-muted">@Model.referenceId</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>No data found for this reference.
        </div>
    }
</div>



<!-- jQuery (required for DataTables) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>



