@model VigilanceClearance.Models.Modal_Properties.PESB.VcReferenceReceivedForGetById_Model
@{
    ViewBag.Title = "PESB Appointment";
    Layout = "~/Views/Shared/_PESBLayout.cshtml";
}

<div class="d-flex justify-content-end mb-3">
    <a asp-controller="PESB" asp-action="PESB_Add_New_Reference" class="btn btn-success">
        <i class="fas fa-plus me-1"></i> Add New Reference
    </a>
</div>

@if (Model.data_List != null && Model.data_List.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>ReferenceReceivedFor</th>
                    <th>ReferenceReceivedFrom</th>
                    <th>ReferenceReceivedFromCode</th>
                    <th>selectionForThePostCategory</th>
                    <th>selectionForThePostSubCategory</th>
                    <th>OrgCode</th>
                    <th>MinCode</th>
                    <th>ReferenceNo_FileNo</th>
                    <th>ReferenceOrSubmissionToCvcDate</th>
                    <th>CVC_ReferenceID_FileNo</th>
                    <th>CreatedBy</th>
                    <th>PendingWith</th>
                    <th>UID</th>
                    <th>ReferenceID</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.data_List.Count; i++)
                {
                    var item = Model.data_List[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@item.ReferenceReceivedFor</td>
                        <td>@item.ReferenceReceivedFrom</td>
                        <td>@item.ReferenceReceivedFromCode</td>
                        <td>@item.selectionForThePostCategory</td>
                        <td>@item.selectionForThePostSubCategory</td>
                        <td>@item.OrgCode</td>
                        <td>@item.MinCode</td>
                        <td>@item.ReferenceNo_FileNo</td>
                        <td>@item.ReferenceOrSubmissionToCvcDate</td>
                        <td>@item.CVC_ReferenceID_FileNo</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.PendingWith</td>
                        <td>@item.UID</td>
                        <td>@item.ReferenceID</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">No records found.</div>
}

