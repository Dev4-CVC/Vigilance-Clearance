@using VigilanceClearance.Models.ViewModel
@using VigilanceClearance.Models.ViewModel.Ministry
@model List<OfficerListModel>
@{
    ViewData["Title"] = "ViewOfficerListForGivenProposal";
    Layout = "~/Views/Shared/_MinistryLayout.cshtml";
}


<style>
    .table-responsive {
        max-height: 500px;
        overflow-x: auto;
        overflow-y: auto;
    }

    .table thead th {
        position: sticky;
        top: 0;
        background-color: #f8f9fa;
        z-index: 1;
    }
</style>


<section>
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-md-11">
                    <h3 class="card-title mb-0">View Reference Received CVC</h3>
                </div>
                <div class="col-md-1">
                    <a asp-action="ViewReferenceReceivedCVC" asp-route-id= "#" class="btn btn-light btn-sm">Back</a>
                </div>
            </div>
        </div>
        <div class="card-body p-2">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-sm" id="ministryTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Action</th>
                            <th>Sr.No.</th>
                            <th>Master Reference ID</th>
                            <th>Officer ID</th>
                            <th>selection For The PostCategory</th>
                            <th>selectionForThePostSubCategory</th>
                            <th>ReferenceReceivedFor</th>
                            <th>othersRemarks</th>
                            <th>orgCode</th>
                            <th>Officer_Name</th>
                            <th>Officer_FatherName</th>
                            <th>Officer_DateOfBirth</th>
                            <th>Officer_RetirementDate</th>

                            <th>Officer_ServiceEntryDate</th>
                            <th>Officer_Service</th>
                            <th>Officer_Batch_Year</th>

                            <th>Officer_Cadre</th>
                            <th>IntegrityAgreedOrDoubtful_8</th>
                            <th>AllegationOfMisconductExamined_9</th>
                            <th>PunishmentAwarded_10</th>

                            <th>DisciplinaryCriminalProceedings_11</th>
                            <th>ActionContemplatedAgainstTheOfficerAsOnDate_12</th>
                            <th>ComplaintWithVigilanceAnglePending_13</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 1;
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        <a asp-action="ViewOfficerListForGivenProposal" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                                        <a asp-action="UpdateReferenceReceivedCVC" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>

                                    </td>
                                    <td>@sno</td>
                                    <td>@item.MasterReferenceID</td>
                                    <td>@item.Id</td>
                                    <td>@item.selectionForThePostCategory</td>
                                    <td>@item.selectionForThePostSubCategory</td>
                                    <td>@item.ReferenceReceivedFor</td>
                                    <td>@item.othersRemarks</td>
                                    <td>@item.orgCode</td>
                                    <td>@item.Officer_Name</td>
                                    <td>@item.Officer_FatherName</td>
                                    <td>@item.Officer_DateOfBirth</td>
                                    <td>@item.Officer_RetirementDate</td>
                                    <td>@item.Officer_ServiceEntryDate</td>
                                    <td>@item.Officer_Service</td>
                                    <td>@item.Officer_Batch_Year</td>
                                    <td>@item.Officer_Cadre</td>
                                    <td>@item.IntegrityAgreedOrDoubtful_8</td>
                                    <td>@item.AllegationOfMisconductExamined_9</td>
                                    <td>@item.PunishmentAwarded_10</td>
                                    <td>@item.DisciplinaryCriminalProceedings_11</td>
                                    <td>@item.ActionContemplatedAgainstTheOfficerAsOnDate_12</td>
                                    <td>@item.ComplaintWithVigilanceAnglePending_13</td>
                                </tr>
                                sno++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).on('click', '.btnSubmitRow', function () {
        var row = $(this).closest('tr');

        var rowData = {
            Id: row.find('td:eq(1)').text().trim(),                    // Sr.No. (or real ID if in data attr)
            MasterReferenceID: row.find('td:eq(2)').text().trim(),
            selectionForThePostCategory: row.find('td:eq(3)').text().trim(),
            selectionForThePostSubCategory: row.find('td:eq(4)').text().trim(),
            ReferenceReceivedFor: row.find('td:eq(5)').text().trim(),
            othersRemarks: row.find('td:eq(6)').text().trim(),
            orgCode: row.find('td:eq(7)').text().trim(),
            Officer_Name: row.find('td:eq(8)').text().trim(),
            Officer_FatherName: row.find('td:eq(9)').text().trim(),
            Officer_DateOfBirth: row.find('td:eq(10)').text().trim(),
            Officer_RetirementDate: row.find('td:eq(11)').text().trim(),
            Officer_ServiceEntryDate: row.find('td:eq(12)').text().trim(),
            Officer_Service: row.find('td:eq(13)').text().trim(),
            Officer_Batch_Year: row.find('td:eq(14)').text().trim(),
            Officer_Cadre: row.find('td:eq(15)').text().trim(),
            IntegrityAgreedOrDoubtful_8: row.find('td:eq(16)').text().trim(),
            AllegationOfMisconductExamined_9: row.find('td:eq(17)').text().trim(),
            PunishmentAwarded_10: row.find('td:eq(18)').text().trim(),
            DisciplinaryCriminalProceedings_11: row.find('td:eq(19)').text().trim(),
            ActionContemplatedAgainstTheOfficerAsOnDate_12: row.find('td:eq(20)').text().trim(),
            ComplaintWithVigilanceAnglePending_13: row.find('td:eq(21)').text().trim()
        };

        console.log(rowData); // For debugging

        $.ajax({
            type: "POST",
            url: '@Url.Action("UpdateReferenceReceivedCVC", "Ministry_Department")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(rowData),
            success: function (response) {
                alert("Row updated successfully!");
            },
            error: function () {
                alert("Error occurred during submission.");
            }
        });
    });
</script>







