        <div class="col-md-3">
                <div class="card-body p-2">
                    <table class="table table-bordered table-hover table-sm w-100">
                        <thead class="thead-light">
                            <tr>
                                <th>S.No.</th>
                                <th>Name</th>
                                <th>Batch Year</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 1;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@sno</td>
                                    <td>@item.Officer_Name</td>
                                    <td>@item.Officer_Batch_Year</td>
                                </tr>
                                sno++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        <!-- Right side: Placeholder (75% width) -->
        <div class="col-md-9">
            <!-- This can later hold details, forms, preview, etc. -->
        </div>

       
    </div>
</section>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#forwardtoConcernDepartmen').click(function () {
                $.ajax({
                    url: '/Coord2_BranchOfficer/UpdateVcReferenceByDH',
                    type: 'POST',
                    contentType: 'application/json',
                    success: function (response) {
                        alert(response);
                        if (response === "1" || response === 1) {
                           
                            alert("Proposal sent to DH successfully.");
                            $('#forwardtoConcernDepartmen').prop('disabled', true); // ✅ Disable button
                        } else {
                            alert("Failed to send proposal.");
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error:", status, error);
                        alert("An error occurred while sending the proposal.");
                    }
                });
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#sendProposalBtn').click(function () {
                $.ajax({
                    url: '/Coord2_BranchOfficer/UpdateVcReferenceByDH',
                    type: 'POST',
                    contentType: 'application/json',
                    success: function (response) {
                       
                        if (response === "1" || response === 1) {

                            alert("Proposal sent to DH successfully.");
                            $('#sendProposalBtn').prop('disabled', true); // ✅ Disable button
                        } else {
                            alert("Failed to send proposal.");
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error:", status, error);
                        alert("An error occurred while sending the proposal.");
                    }
                });
            });
        });
    </script>
}
