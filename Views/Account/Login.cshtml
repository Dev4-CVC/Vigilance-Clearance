@model VigilanceClearance.Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/VigilanceClearance.styles.css" asp-append-version="true" />
<link href="~/css/login.css" rel="stylesheet" />

@* Navbar *@
<nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
    <div class="container-fluid justify-content-center">
        <a class="navbar-brand" href="#" style="cursor: default;">Vigilance Clearance</a>
    </div>
</nav>

@* Login Form *@
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">User Login</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" placeholder="Enter username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Captcha" class="form-label"></label>
                            <div class="captcha-wrapper mb-2">
                                <img src="@Url.Action("GenerateCaptcha", "Account")" alt="CAPTCHA" id="captchaImage" class="border rounded" style="height: 40px;" />
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="reloadCaptcha()">
                                    <i class="fas fa-sync-alt"></i> Reload
                                </button>
                            </div>
                            <input asp-for="Captcha" class="form-control" placeholder="Enter CAPTCHA" />
                            <span asp-validation-for="Captcha" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* JS Scripts  *@
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/account.js"></script>