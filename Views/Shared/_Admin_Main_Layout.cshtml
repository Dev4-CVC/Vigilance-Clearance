    <style>
        /* Sidebar */
        .main-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            overflow-y: auto;
            z-index: 1030;
            transition: width 0.3s ease;
        }

        /* Content wrapper */
        .content-wrapper {
            background-color: #f4f6f9;
            transition: margin-left 0.3s ease;
            margin-left: 250px;
        }


        /* Top header */
        .ml-custom-header {
            margin-left: 250px; /* Align with sidebar */
            transition: margin-left 0.3s ease;
            background: linear-gradient(90deg, #0d6efd, #20c997);
            color: #fff;
        }
        /* Collapse mode */
        body.sidebar-collapse .main-sidebar {
            width: 73px; /* Match your collapsed sidebar width */
        }

        body.sidebar-collapse .content-wrapper,
        body.sidebar-collapse .ml-custom-header {
            margin-left: 73px;
        }

        /* Optional: smoother breadcrumb/header spacing */
        .content-header {
            padding: 5px 10px;
            background-color: #FFF;
            border-bottom: 1px solid black;
            margin-top: 0px;
            margin-bottom: 12px;
        }


        .content {
            min-height: 608px;
        }


        .hover-link:hover {
            background-color: #20B2AA !important;
            color: #fff !important;
        }


        .nav-treeview .nav-link:hover {
            background-color: #ADD8E6 !important;
            color: #000 !important;
        }

        .hover-link:hover i,
        .hover-link:hover p {
            color: #fff !important;
        }

        .nav-treeview .nav-link:hover i,
        .nav-treeview .nav-link:hover p {
            color: #000 !important;
        }



        #visitorCount {
            font-weight: bold;
            color: #007bff; /* Bootstrap primary color */
            padding: 2px 8px;
            background-color: #e7f1ff;
            border-radius: 6px;
            margin-left: 8px;
            font-size: 14px;
        }

        /* scroll down css */
        .nav-treeview {
            max-height: 300px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: #ccc transparent;
        }

            .nav-treeview::-webkit-scrollbar {
                width: 6px;
            }

            .nav-treeview::-webkit-scrollbar-track {
                background: transparent;
            }

            .nav-treeview::-webkit-scrollbar-thumb {
                background-color: #999;
                border-radius: 4px;
            }



        /* //dropdown */
        /* Style for the dropdown button */
        .dropdown .dropbtn {
            font-size: 18px;
            color: #000;
            text-align: center;
            padding: 14px 16px;
            background-color: inherit;
            border: none;
            outline: none;
            cursor: pointer;
        }

        /* Dropdown container */
        .dropdown {
            position: relative;
            display: inline-block;
            max-width: 100%;
            overflow-x: visible;
        }


        /* Dropdown content (hidden by default) */
        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: #f9f9f9;
            min-width: 180px;
            box-shadow: 4px 10px 16px rgba(114, 0, 0, 0.2);
            z-index: 1;
            padding: 10px;
            left: auto;
        }


            /* Override default link styles inside dropdown */
            .dropdown-content a.btn {
                display: block;
                width: 100%;
                margin-bottom: 8px;
                text-align: left;
            }

                /* Optional: remove last margin */
                .dropdown-content a.btn:last-child {
                    margin-bottom: 0;
                }

        /* Show dropdown on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        .text-muted {
            color: #6c757d;
            font-weight: normal;
        }
    </style>
</head>
