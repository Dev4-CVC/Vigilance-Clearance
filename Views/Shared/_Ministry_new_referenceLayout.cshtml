            background-color: #e7f1ff;
            border-radius: 6px;
            margin-left: 8px;
            font-size: 14px;
        }

        /* scroll down css */
        .nav-treeview {
            max-height: 300px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: #ccc transparent;
        }

            .nav-treeview::-webkit-scrollbar {
                width: 6px;
            }

            .nav-treeview::-webkit-scrollbar-track {
                background: transparent;
            }

            .nav-treeview::-webkit-scrollbar-thumb {
                background-color: #999;
                border-radius: 4px;
            }



        /* //dropdown */
        /* Style for the dropdown button */
        .dropdown .dropbtn {
            font-size: 18px;
            color: #000;
            text-align: center;
            padding: 14px 16px;
            background-color: inherit;
            border: none;
            outline: none;
            cursor: pointer;
        }

        /* Dropdown container */
        .dropdown {
            position: relative;
            display: inline-block;
            max-width: 100%;
            overflow-x: visible;
        }


        /* Dropdown content (hidden by default) */
        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: #f9f9f9;
            min-width: 180px;
            box-shadow: 4px 10px 16px rgba(114, 0, 0, 0.2);
            z-index: 1;
            padding: 10px;
            left: auto;
        }


            /* Override default link styles inside dropdown */
            .dropdown-content a.btn {
                display: block;
                width: 100%;
                margin-bottom: 8px;
                text-align: left;
            }

                /* Optional: remove last margin */
                .dropdown-content a.btn:last-child {
                    margin-bottom: 0;
                }

        /* Show dropdown on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        .text-muted {
            color: #6c757d;
            font-weight: normal;
        }
    </style>
</head>
